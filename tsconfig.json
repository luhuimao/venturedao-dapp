{
  "compilerOptions": {
    // "target": "es5",
    "target": "ES2018",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ES2019"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@pefish"
    ],
    "noImplicitAny": false
  },
  "include": [
    "src"
  ]
}